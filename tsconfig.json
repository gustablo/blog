{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "paths": {
    "@schemas/*": ["./src/database/schemas/*"],
    "@interfaces/*": ["./src/interfaces/*"],
    "@core/*": ["./src/core/*"],
    "@database/*": ["./src/database/*"]
  },
  "exclude": ["node_modules", "dist"]
}
